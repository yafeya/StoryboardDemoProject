<Window x:Class="StoryboardDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:StoryboardDemo"
        Title="MainWindow" Height="480" Width="640">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type local:ModelInstrumentViewModel}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="32"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="{Binding Icon}"/>
                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Grid.Column="1"/>
                </Grid>
            </DataTemplate>
            <DataTemplate DataType="{x:Type local:ModelInterfaceViewModel}">
                <Expander Header="{Binding Name}" ExpandDirection="Down">
                    <ListView ItemsSource="{Binding Children}" SelectedItem="{Binding SelectedInstrument}" Width="240"/>
                </Expander>
            </DataTemplate>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="360"/>
        </Grid.ColumnDefinitions>
        <TabControl>
            <TabItem Header="Flat">
                <ListView ItemsSource="{Binding FlatInstruments}" SelectedItem="{Binding SelectedInstrument}"/>
            </TabItem>
            <TabItem Header="Umbrella">
                <ListView ItemsSource="{Binding UmbrellaInterfaces}"/>
            </TabItem>
        </TabControl>
        <GridSplitter Grid.Column="1" 
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch" 
                      Width="3"/>
        <ContentControl DataContext="{Binding SelectedInstrument}" Grid.Column="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Source="{Binding Icon}"/>
                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Grid.Column="1"/>
            </Grid>
        </ContentControl>
    </Grid>
</Window>
